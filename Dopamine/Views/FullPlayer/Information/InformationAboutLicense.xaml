        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource Brush_PrimaryText}" Margin="0,15,0,0" Text="This program is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY; without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the GNU General Public License for more details."/>
        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource Brush_PrimaryText}" Margin="0,15,0,0" Text="You should have received a copy of the GNU General Public License along with this program. If not, see"/>
        <Button Style="{StaticResource LinkButton}" Content="http://www.gnu.org/licenses/" Command="{Binding OpenLinkCommand}" CommandParameter="http://www.gnu.org/licenses/"/>
    </StackPanel>
</UserControl>
